@model yeniproje.Models.EmpClass
@{
    ViewData["Title"] = "Create";

}
<style>

    .button {
        display: inline-block;
        border-radius: 4px;
        background-color: #f4511e;
        border: none;
        color: #FFFFFF;
        text-align: center;
        font-size: 15px;
        padding: 10px;
        width: 100px;
        transition: all 0.5s;
        cursor: pointer;
        margin: 5px;
    }

        .button span {
            cursor: pointer;
            display: inline-block;
            position: relative;
            transition: 0.5s;
        }

            .button span:after {
                content: '\00bb';
                position: absolute;
                opacity: 0;
                top: 0;
                right: -20px;
                transition: 0.5s;
            }

        .button:hover span {
            padding-right: 25px;
        }

            .button:hover span:after {
                opacity: 1;
                right: 0;
            }

    .button1 {
        background-color: #2746b1;
    }
    /* Green */
    .button2 {
        background-color: #aa1d29;
    }

    a {
        color: blue;
        text-decoration: underline;
        font-size: 15px;
    }
</style>
<div class="col-md-8">
    <div class="card">
        <div class="card-header card-header-primary">
            <h4 class="card-title">Kasa Kayıt</h4>
            <p class="card-category">Bu alanda Yeni Kasa ekleyebilirsiniz.</p>
        </div>
        <div class="card-body">
            <br />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Kadi" class="control-label">Kasa Adı:</label>
                            <input asp-for="Kadi" class="form-control" required style="width: 710px; height:35px;" />
                            <span asp-validation-for="Kadi" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <label asp-for="Adsoyad" class="control-label">Kasa Sahibi Adı Soyadı:</label>
                            <input asp-for="Adsoyad" class="form-control" required style="width: 710px; height:35px;" />
                            <span asp-validation-for="Adsoyad" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <label asp-for="Tel" class="control-label">Telefon Numarası:</label>
                            <input asp-for="Tel" class="form-control" type="text" pattern="\d{11}" title="Bu input’a sadece 11 karakterli sayısal değer girilebilir"  required style="width: 710px; height:35px;" />
                            <span asp-validation-for="Tel" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <label asp-for="Adres" class="control-label">Adres:</label>
                            <input asp-for="Adres" class="form-control" required style="width: 710px; height:35px;" />
                            <span asp-validation-for="Adres" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <label asp-for="Acik" class="control-label">Açıklama:</label>
                            <input asp-for="Acik" class="form-control" required style="width: 710px; height:35px; " />
                            <span asp-validation-for="Acik" class="text-danger"></span>
                        </div>
                        <br />
                        <div class="form-group">
                            <label asp-for="Bakiye" class="control-label">Bakiye:</label>
                            <input asp-for="Bakiye" class="form-control" required style="width: 710px; height:35px; " />
                            <span asp-validation-for="Bakiye" class="text-danger"></span>
                        </div>
                        <br />
                        <div style="width:100%;  position: absolute; top:445px; left:440px; right:850px; padding:0px;">
                            <button type="reset" class="button button2 pull-right"><span>Sıfırla</span></button>
                        </div>
                        <div style="width:100%;  position: absolute; top:445px; left:330px; right:850px; padding:0px;">
                            <button type="submit" class="button button1 pull-right"><span>Kaydet</span></button>
                        </div>
                        <br />
                        <br />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@{
    if (@TempData["msg"] != null)
    {
        <script>
                   alert('@TempData["msg"]')
        </script>
    }
}

